local jojoPose = {
    ["Torso"] = {rx=10, ry=0, rz=0},
    ["Head"] = {rx=-10, ry=0, rz=0},
    ["Left Arm"] = {rx=30, rz=-45, ry=20},
    ["Right Arm"] = {rx=90, rz=0, ry=0},
    ["Left Leg"] = {rx=20, rz=-5},
    ["Right Leg"] = {rx=10, rz=5}
}

MainTab:CreateToggle({
   Name = "Become Stand (Float + Pose)",
   CurrentValue = false,
   Flag = "StandToggle",
   Callback = function(Value)
       standMode = Value
       if standMode then
           if not connectedTarget then
               Notify("Error", "No connection! Enter a code first.", 3)
               return
           end
           
           if standPlatform then standPlatform:Destroy() end
           standPlatform = Instance.new("Part")
           standPlatform.Size = Vector3.new(4, 0.5, 4)
           standPlatform.Transparency = 0.5
           standPlatform.Color = Color3.fromRGB(0, 255, 255)
           standPlatform.Material = Enum.Material.ForceField
           standPlatform.Anchored = true
           standPlatform.CanCollide = true
           standPlatform.Name = "StandPlatform"
           standPlatform.Parent = workspace
           
           if standConnection then standConnection:Disconnect() end
           
           standConnection = RunService.Heartbeat:Connect(function()
               local char = LocalPlayer.Character
               local targetChar = connectedTarget.Character
               
               if char and targetChar and char:FindFirstChild("HumanoidRootPart") and targetChar:FindFirstChild("HumanoidRootPart") then
                   local tRoot = targetChar.HumanoidRootPart
                   local cRoot = char.HumanoidRootPart
                   local hum = char:FindFirstChild("Humanoid")
                   
                   -- Prevent Falling animation by forcing state
                   if hum then
                       hum:ChangeState(Enum.HumanoidStateType.Physics)
                   end
                   
                   local bob = math.sin(tick() * 2) * 0.8
                   local goalCF = tRoot.CFrame * CFrame.new(2, 3 + bob, 2)
                   
                   -- Move Platform
                   if standPlatform then
                       standPlatform.CFrame = goalCF * CFrame.new(0, -3, 0) -- Platform under feet
                   end
                   
                   -- Lerp Character
                   cRoot.CFrame = cRoot.CFrame:Lerp(goalCF, 0.15)
                   cRoot.Velocity = Vector3.zero
                   
                   for n, d in pairs(jojoPose) do
                       local p, m = getRealParts(char, n)
                       if m then
                           if not m:GetAttribute("OrigC0") then m:SetAttribute("OrigC0", m.C0) end
                           local base = m:GetAttribute("OrigC0")
                           local rot = CFrame.Angles(math.rad(d.rx), math.rad(d.ry), math.rad(d.rz))
                           m.C0 = base * rot
                       end
                   end
               end
           end)
       else
           if standConnection then
               standConnection:Disconnect()
               standConnection = nil
           end
           if standPlatform then
               standPlatform:Destroy()
               standPlatform = nil
           end
           
           if LocalPlayer.Character then
                local hum = LocalPlayer.Character:FindFirstChild("Humanoid")
                if hum then hum:ChangeState(Enum.HumanoidStateType.GettingUp) end
                for n, d in pairs(jojoPose) do
                   local p, m = getRealParts(LocalPlayer.Character, n)
                   if m and m:GetAttribute("OrigC0") then
                       m.C0 = m:GetAttribute("OrigC0")
                   end
                end
           end
       end
   end,
})

