MainTab:CreateButton({
   Name = "Teleport To Target (Touching)",
   Callback = function()
       if selectedPlayer and selectedPlayer.Character and selectedPlayer.Character:FindFirstChild("HumanoidRootPart") and LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart") then
           LocalPlayer.Character.HumanoidRootPart.CFrame = selectedPlayer.Character.HumanoidRootPart.CFrame * CFrame.new(0, 0, 1)
       else
           Notify("Error", "Target or LocalPlayer invalid", 2)
       end
   end,
})

MainTab:CreateButton({
   Name = "Fling Target (Once)",
   Callback = function()
       if selectedPlayer and selectedPlayer.Character and selectedPlayer.Character:FindFirstChild("HumanoidRootPart") and LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart") then
           local lpRoot = LocalPlayer.Character.HumanoidRootPart
           local targetRoot = selectedPlayer.Character.HumanoidRootPart
           local savedPos = lpRoot.CFrame
           
           Notify("Fling", "Flinging " .. selectedPlayer.Name .. "...", 2)
           
           local wasFlingEnabled = hiddenfling
           hiddenfling = true 
           
           local flingTime = 1.5
           local startTime = tick()
           
           local connection
           connection = RunService.RenderStepped:Connect(function()
               if tick() - startTime > flingTime then
                   connection:Disconnect()
                   hiddenfling = wasFlingEnabled
                   
                   lpRoot.Velocity = Vector3.zero
                   lpRoot.RotVelocity = Vector3.zero
                   lpRoot.CFrame = savedPos
                   return
               end
               
               if targetRoot and targetRoot.Parent and lpRoot and lpRoot.Parent then
                   lpRoot.CFrame = targetRoot.CFrame * CFrame.new(0, 0, 0.5)
               end
           end)
       else
           Notify("Error", "Select a valid target first.", 2)
       end
   end,
})

local SectionConnect = MainTab:CreateSection("Connection (JoJo Stand)")

MainTab:CreateButton({
   Name = "Generate Random Code",
   Callback = function()
       sessionCode = math.random(1000, 9999)
       if LocalPlayer.Character then
           LocalPlayer.Character:SetAttribute("SolariusCode", sessionCode)
       end
       
       if setclipboard then
           setclipboard(tostring(sessionCode))
           Notify("Code Generated", tostring(sessionCode) .. " (Copied)", 5)
       else
           Notify("Code Generated", tostring(sessionCode) .. " (Type this on other acc)", 10)
       end
   end,
})

MainTab:CreateInput({
   Name = "Connect via Random Code",
   PlaceholderText = "Enter 4-digit code",
   RemoveTextAfterFocusLost = false,
   Callback = function(Text)
       local inputCode = tonumber(Text)
       if inputCode then
           local found = false
           for _, p in pairs(Players:GetPlayers()) do
               if p ~= LocalPlayer and p.Character and p.Character:GetAttribute("SolariusCode") == inputCode then
                   connectedTarget = p
                   found = true
                   Notify("Success", "Connected to " .. p.Name, 3)
                   break
               end
           end
           if not found then
               Notify("Failed", "No player found with that code.", 3)
           end
       end
   end,
})

MainTab:CreateInput({
   Name = "Connect via User ID (Backup)",
   PlaceholderText = "Paste User ID",
   RemoveTextAfterFocusLost = false,
   Callback = function(Text)
       local id = tonumber(Text)
       if id then
           for _, p in pairs(Players:GetPlayers()) do
               if p.UserId == id then
                   connectedTarget = p
                   Notify("Connected", "Target locked: " .. p.Name, 3)
                   return
               end
           end
           Notify("Error", "Player not found in server.", 3)
       end
   end,
})

local jojoPose = {
    ["Torso"] = {rx=0, ry=20, rz=0},
    ["Left Arm"] = {rx=120, rz=-20, ry=20},
    ["Right Arm"] = {rx=30, rz=20, ry=20},
    ["Left Leg"] = {rx=20, rz=-10},
    ["Right Leg"] = {rx=-10, rz=10}
}

MainTab:CreateToggle({
   Name = "Become Stand (Float + Pose)",
   CurrentValue = false,
   Flag = "StandToggle",
   Callback = function(Value)
       standMode = Value
       if standMode then
           if not connectedTarget then
               Notify("Error", "No connection! Enter a code first.", 3)
               return
           end
           
           if standConnection then standConnection:Disconnect() end
           
           standConnection = RunService.Heartbeat:Connect(function()
               local char = LocalPlayer.Character
               local targetChar = connectedTarget.Character
               
               if char and targetChar and char:FindFirstChild("HumanoidRootPart") and targetChar:FindFirstChild("HumanoidRootPart") then
                   local tRoot = targetChar.HumanoidRootPart
                   char.HumanoidRootPart.CFrame = tRoot.CFrame * CFrame.new(2, 3, 2)
                   char.HumanoidRootPart.Velocity = Vector3.zero
                   
                   for n, d in pairs(jojoPose) do
                       local p, m = getRealParts(char, n)
                       if m then
                           if not m:GetAttribute("OrigC0") then m:SetAttribute("OrigC0", m.C0) end
                           local base = m:GetAttribute("OrigC0")
                           local rot = CFrame.Angles(math.rad(d.rx), math.rad(d.ry), math.rad(d.rz))
                           m.C0 = base * rot
                       end
                   end
               end
           end)
       else
           if standConnection then
               standConnection:Disconnect()
               standConnection = nil
           end
           
           if LocalPlayer.Character then
                for n, d in pairs(jojoPose) do
                   local p, m = getRealParts(LocalPlayer.Character, n)
                   if m and m:GetAttribute("OrigC0") then
                       m.C0 = m:GetAttribute("OrigC0")
                   end
                end
           end
       end
   end,
})

